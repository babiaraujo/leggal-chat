# =============================================================================
# LEGGAL - Environment Variables Template
# =============================================================================
# Copie este arquivo para .env e preencha com seus valores reais
# Comando: cp env.example .env

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://leggal_user:leggal_password@postgres:5432/leggal_db

# =============================================================================
# SECURITY & JWT
# =============================================================================
SECRET_KEY=your-secret-key-here-make-it-long-and-random-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# OPENAI
# =============================================================================
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL_NAME=gpt-4o-mini

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# CORS (Frontend URLs permitidas)
# =============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# REDIS (opcional para cache futuro)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# RATE LIMITING (opcional)
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

